<div class="col">
  <div class="card bg-transparent" style="border:none">
    <% if blogpost.images.attached? %>
      <%= link_to image_tag(blogpost.images[0], class:"card-img card-img-md"), blogpost %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= blogpost.post_title %></h5>
      <p class="card-text"><%= blogpost.content.to_plain_text.truncate(100) %></p>
    </div>
  </div>
</div>
