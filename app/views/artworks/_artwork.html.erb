<div class="col">
  <div class="card bg-transparent" style="border:none">
    <% if artwork.videos.attached? %>
      <%= link_to image_tag(artwork.videos[0], class:"card-img card-img-md"), artwork %>
    <% elsif artwork.images.attached? %>
      <%= link_to image_tag(artwork.images[0], class:"card-img card-img-md"), artwork %>
    <% end %>
    <div class="card-body">
      <p class="card-text text-center"><%= artwork.listing_name %></p>
    </div>
  </div>
</div>
