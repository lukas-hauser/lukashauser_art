<div class="col">
  <div class="card bg-transparent" style="border:none">
    <% if artwork.images.attached? %>
      <%= link_to image_tag(artwork.images[0], class:"card-img card-img-md"), artwork %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= artwork.listing_name %></h5>
    </div>
  </div>
</div>
